@model CustomerUsageOverviewViewModel

@{
    ViewData["Title"] = "Customer Usage Overview - " + Model.CurrentMonth;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer ID</th>
                            <th>Full Name</th>
                            <th>Plan Name</th>
                            <th>Plan Limit (GB)</th>
                            <th>Total Data Used (GB)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customers)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Index", "DataUsage", new { customerId = item.CustomerId })" class="link-dark">
                                        @item.CustomerId
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "DataUsage", new { customerId = item.CustomerId })" class="link-dark">
                                        @item.FullName
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "DataUsage", new { customerId = item.CustomerId })" class="link-dark">
                                        @item.PlanName
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "DataUsage", new { customerId = item.CustomerId })" class="link-dark">
                                        @item.PlanLimit
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "DataUsage", new { customerId = item.CustomerId })" class="link-dark">
                                        @item.TotalDataUsed
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
