@model MyApp.Web.ViewModels.DataUsageViewModel
@{
    ViewData["Title"] = "Monthly Data Usage";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Customer ID</label>
                        <p class="form-control-plaintext">@Model.CustomerId</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Customer Name</label>
                        <p class="form-control-plaintext">@Model.FullName</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Total Data Used</label>
                        <p class="form-control-plaintext">@Model.TotalDataUsed GB</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Data Limit</label>
                        <p class="form-control-plaintext">@Model.DataLimit GB</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Near Data Limit</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" checked="@Model.IsNearLimit" disabled>
                            <label class="form-check-label">
                                @(Model.IsNearLimit ? "Yes" : "No")
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Recommended Plan</label>
                        <p class="form-control-plaintext">@Model.RecommendedPlan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
